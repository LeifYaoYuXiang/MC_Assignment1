<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <ImageView
                android:src="@drawable/sender"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:src="@drawable/receiver"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:src="@drawable/cc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:src="@drawable/bcc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:src="@drawable/subject"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fromInformation"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint=" From Who?"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/toInformation"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint=" To who?"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/ccInformation"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint=" cc"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/bccInformation"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint=" bcc"
                android:background="@drawable/bg_edittext"/>

            <EditText
                android:id="@+id/subject"
                android:hint=" subject"
                android:layout_width="240dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_edittext"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Please Input the Content in Following Square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bg_edittext"
        android:hint="Email Content"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/clear"
            android:text="Clear"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/send"
            android:text="finish editing"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    

</LinearLayout>